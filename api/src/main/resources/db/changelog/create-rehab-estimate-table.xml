<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="craig">
        <createTable tableName="rehab_estimate">
            <column name="id" type="text">
                <constraints nullable="false" />
            </column>
            <column name="property_id" type="text">
                <constraints nullable="false" />
            </column>
            <column name="description" type="text">
                <constraints nullable="false" />
            </column>
            <column name="estimate" type="number">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="rehab_estimate" columnNames="id" />
        <addForeignKeyConstraint baseTableName="offer"
                                 baseColumnNames="property_id"
                                 constraintName="property_rehab_estimate_fk"
                                 referencedTableName="property"
                                 referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>