<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="craig">
        <createTable tableName="travel_log">
            <column name="id" type="text">
                <constraints nullable="false" />
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="updated_date" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="text">
                <constraints nullable="false" />
            </column>
            <column name="travel_date" type="date" >
                <constraints nullable="false" />
            </column>
            <column name="description" type="text">
                <constraints nullable="false" />
            </column>
            <column name="miles" type="number">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="travel_log" columnNames="id" />
        <addForeignKeyConstraint baseTableName="travel_log"
                                 baseColumnNames="user_id"
                                 constraintName="travel_log_user_fk"
                                 referencedTableName="app_user"
                                 referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>